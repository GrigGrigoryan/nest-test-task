{
  "name": "nest-test-task",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prettier": "./node_modules/.bin/prettier --write \"src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "build:api": "nest build api",
    "build:auth": "nest build auth",
    "build": "npm run build:api && npm run build:auth",
    "typeorm": "npx typeorm -d ./dist/apps/auth/db/data-source.js",
    "generate:migration": "npm run typeorm -- migration:generate",
    "run:migration": "npm run typeorm -- migration:run",
    "revert:migration": "npm run typeorm -- migration:revert",
    "start:all": "npm run start:dev api & npm run start:dev store & npm run start:dev mailer"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.2",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/testing": "^10.3.7",
    "@nestjs/typeorm": "^10.0.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "pg": "^8.11.5",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1"
  }
}
